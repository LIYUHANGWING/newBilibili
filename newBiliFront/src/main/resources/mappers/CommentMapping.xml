<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ymzting_dm_web.Dao.CommentDao">
    <insert id="sendCommentToMysql">
        insert into comment(id, username, comment, time, color, isuse) values (#{id}, #{username}, #{comment}, #{time}, #{color}, #{isuse});
    </insert>
    <select id="selectComment" resultType="com.example.biliE.bean.Comment">
        select * from comment where id = #{id};
    </select>
</mapper>
